@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

@model SampleMultiViewMvc.Models.Person

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Person</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EmployeeNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmployeeNo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsAttendance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsAttendance)
        </dd>
        <!-- 以下はログインユーザーのみ表示可能 -->
        @if (User.Identity.IsAuthenticated)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Blog)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Blog)
            </dd>

            <!-- 以下は管理者のみ表示可能 -->
            @if (User.IsInRole("Administrator"))
            {
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Age)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Age)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.JoinDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.JoinDate)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.AddressId)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Address.Name)
                </dd>
            }
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
